{% extends 'base.html.twig' %}

{% block title %}
    Modification d'un utilisateur
{% endblock %}

{% block body %}

    <main class="container">
        <h1 class="my-5">Modifier un utilisateur</h1>

        <form method="POST" enctype="multipart/form-data">

            <div class="row row-cols-sm-1 row-cols-lg-2 d-flex justify-content-center align-items-center">

                <div>
                    <div class="d-flex gap-2">
                        {{ include('shared/form/_input.html.twig', {
                            label: 'Prénom *',
                            type: 'text',
                            name: 'firstname',
                            required: true,
                            value: item.firstname
                        }) }}

                        {{ include('shared/form/_input.html.twig', {
                            label: 'Nom *',
                            type: 'text',
                            name: 'lastname',
                            required: true,
                            value: item.lastname
                        }) }}
                    </div>


                    {{ include('shared/form/_input.html.twig', {
                        label: 'Adresse mail *',
                        type: 'email',
                        name: 'email',
                        required: true,
                        value: item.email
                    }) }}

                    {{ include('shared/form/_dropdown.html.twig', {
                        choices: roles,
                        label: 'Rôle *',
                        name: 'role',
                        required: true,
                    }) }}

                    {{ include('shared/form/_input.html.twig', {
                        label: 'Vérifié',
                        type: 'checkbox',
                        name: 'isVerified',
                        required: false,
                        value: item.isVerified,
                        class: 'form-check-input'
                    }) }}
                </div>
            </div>
            <div class="mt-5 row row-cols-2 offset-4 row-cols-sm-3 offset-sm-5 row-cols-lg-5">
                <button class="btn btn-primary" type="submit" name="edit-user-submit" value="edit-user">Enregistrer</button>
            </div>
        </form>
        <a class="px-4 py-1 my-5 btn btn-secondary rounded-pill border-0" href="/admin/user/index">Retour</a>
    </main>

{% endblock %}