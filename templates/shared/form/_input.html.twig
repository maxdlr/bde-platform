{% if type is not same as 'checkbox' %}


    <div class="input-group mb-3 align-items-center {{ class is same as 'form-check-input' ? 'form-check form-switch' : '' }}">
    <span
            class=" input-group-{{ type }}"
            id="{{ name }}-addon"
    >
        {{ label|title }}
    </span>

        <input
                type="{{ type }}"
                name="{{ name }}"
                required="{{ required }}"
                placeholder="{{ placeholder }}"
                class="form-control {{ type is same as 'datetime-local' or type is same as 'number' or type is same as 'email' or type is same as 'password' ? 'ms-3' : '' }} {{ class }}"
                aria-label="{{ name }}"
                aria-describedby="{{ name }}-addon"
                value="{{ value|default('') }}"
        >
    </div>

{% endif %}


{% if type is same as 'checkbox' %}
    <div class="form-check form-switch">
        <input class="form-check-input {{ class }}" type="checkbox" role="switch" id="{{ name }}"
                {% if value == 1 %}
                    checked = {{ value }}
                {% endif %}
               name="{{ name }}">
        <label class="form-check-label" for="{{ name }}">{{ label }}</label>
    </div>
{% endif %}


